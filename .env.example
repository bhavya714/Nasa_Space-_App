# NASA Bioscience Explorer - Environment Variables
# Copy this to .env.local for local development

# Optional: OpenAI API key for AI-powered features
# OPENAI_API_KEY=your_openai_api_key_here

# Node.js environment
NODE_ENV=production

# Next.js configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Deployment platform specific settings
# For Render, Replit, or other cloud platforms
DEPLOYMENT_PLATFORM=local

# Data source configuration
# Set to 'fallback' if SB_publications-main folder is not available
DATA_SOURCE=filesystem

# Enable/disable features for deployment
ENABLE_ML_FEATURES=true
ENABLE_3D_VISUALIZATION=true
ENABLE_FILE_UPLOAD=true

# API rate limiting (requests per minute)
API_RATE_LIMIT=60

# Cache duration in milliseconds
CACHE_DURATION=600000

# Debug mode for troubleshooting
DEBUG_MODE=false